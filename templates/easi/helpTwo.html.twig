{% extends 'base.html.twig' %}

{% block title %}EASI{% endblock %}

{% block body %}
    <div class="container-fluid easi">
        <div class="row pt-3">
            <div class="col-lg-2">
                <img class="ms-5" src="{{ asset('build/images/image_a.png') }}" alt="">
            </div>
            <div class="d-flex justify-content-center">
                <div class="col-6 d-flex flex-column align-items-center">
                    {% if word.picture is not null%}
                        <p class="btn-app text-center word-help fs-1 my-3">image du mot : {{ word.content }}</p>
                        <img src="{{ word.picture }}" class="img-help border border-primary border-2 rounded-pill my-5" alt="help">
                    {% else %}
                        <p class="btn-app text-center word fs-1 my-3">{{ word.content }}</p>
                        <p class="btn-app word-help text-center fs-1 border border-primary border-2 rounded-pill my-5"><span class="text-decoration-underline">DÃ©fintion :</span> {{ word.definition }}</p>
                    {% endif %}
                </div>
            </div>
            <div class="my-5 d-flex justify-content-center">
                <a href="{{ path('easi_index', {word_content: word.content}) }}" class="text-decoration-none">
                    <i class="fas fa-undo fa-5x"></i>
                </a>
            </div>
        </div>
    </div>
{% endblock %}
