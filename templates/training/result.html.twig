{% extends 'base.html.twig' %}

{% block title %}Recapitulatif du de test positionnement{% endblock %}

{% block body %}
    <div class="container-fluid easi">
        <div class="row p-5 fs-2 justify-content-center">
            <p class="text-center">Tu as fini le test.</p>
            <div class="text-success text-center fs-2">

                {% if game.errorCount == null %}
                    <p>Tu as 100% de bonnes réponses ! Bravo ! </p>
                    <img class="emoji" src="{{ asset('build/images/emoji_success.png') }}">
                {% else %}
                    <p>Tu vas pouvoir commencer l'entraînement en fonction de tes résultats.</p>
                {% endif %}
            </div>
            <div class="container mt-3">
               <div class="row my-3">
                    <div class="col-9 text-center mx-auto">
                        <h3>Tu as fais {{ letter_errors.a }} erreur{% if letter_errors.a > 1 %}s{% endif%} pour la lettre A</h3>
                        <h3>Tu as fais {{ letter_errors.e }} erreur{% if letter_errors.e > 1 %}s{% endif%} pour la lettre E</h3>
                        <h3>Tu as fais {{ letter_errors.s }} erreur{% if letter_errors.s > 1 %}s{% endif%} pour la lettre S</h3>
                        <h3>Tu as fais {{ letter_errors.i }} erreur{% if letter_errors.i > 1 %}s{% endif%} pour la lettre I</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-9 col-sm-6 mx-auto btn-app bg-white progress-training px-0">
                        <div class="progress">
                            <div class="progress-bar fs-6 bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"> Lettre E</div>
                        </div>
                        <div class="progress">
                            <div class="progress-bar fs-6 bg-info" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">Lettre A</div>
                        </div>
                        <div class="progress">
                            <div class="progress-bar fs-6 bg-warning" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">Lettre S</div>
                        </div>
                        <div class="progress">
                            <div class="progress-bar fs-6 bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">Lettre I</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-end mx-5 mt-5 ">
            <a href=""><div class="next btn btn-app bg-secondary p-2 fs-2">Suivant<i class="fas fa-arrow-right"></i></div></a>

        </div>
    </div>
{% endblock %}

