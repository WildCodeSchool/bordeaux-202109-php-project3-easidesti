{% extends 'base.html.twig' %}
{% block title %}Accueil{% endblock %}
{% block body %}
<div class="home container-fluid">
    <div class="d-flex flex-row justify-content-center justify-content-md-end py-3">
        <div class="col-3">
            <button class="btn btn-app btn-home-connection-white mx-auto py-2">
                {% if app.user %}
                    <a href="{{ path('app_logout') }}">Se déconnecter</a>
                {% else %}
                    <a class="text-decoration-none" href="{{ path('login') }}">Se connecter</a>
                {% endif %}
            </button>
        </div>
    </div>
    <div class="row my-5" >
        <h1 class="m-3 mx-auto">Bienvenue sur EASI-DESTI {% if app.user %}{{ app.user.nickname }}{% endif %}</h1>
    </div>
    <div class="d-flex justify-content-around align-items-center pb-5">
        <div class="col-3 ms-5">
            <img class="image-home" src="{{ asset('build/images/humaaan-3.png') }}" alt="homme debout">
        </div>
        <div class="col-5">
            <button class="btn btn-app btn-home-registration-white">
                <a class="text-decoration-none" href="{{ path('app_register') }}">
                    <img src="{{ asset('build/images/favicon.png') }}" alt="livres"> Je m'inscris pour la première fois !
                </a>
            </button>
        </div>
        <div class="col-3 me-5">
            <img class="image-home" src="{{ asset('build/images/sitting.png') }}" alt="femme assise">
        </div>
    </div>
</div>
{% endblock %}