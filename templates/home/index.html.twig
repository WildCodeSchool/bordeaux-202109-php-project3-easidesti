{% extends 'base.html.twig' %}
{% block title %}Accueil{% endblock %}
{% block body %}
<div class="home container-fluid">
    <div class="pt-5">
        {% include 'component/_flash.html.twig' %}
    </div>
    <div class="row my-5" >
        <h1 class="m-3 mx-auto">Bienvenue sur EASI-DESTI {% if app.user %}{{ app.user.nickname }}{% endif %}</h1>
    </div>
    <div class="d-flex justify-content-around align-items-center pb-5">
        <div class="col-3 ms-5">
            <img class="image-home" src="{{ asset('build/images/humaaan-3.png') }}" alt="homme debout">
        </div>
        <div class="col-5">
            {% if app.user %}
                <a href="{{ path('app_logout') }}" class="btn btn-app btn-home-registration-white">Se d√©connecter</a>
            {% else %}
                <a class="btn btn-app btn-home-registration-white fs-4" href="{{ path('login') }}">
                    <img class="px-3" src="{{ asset('build/images/favicon.png') }}" alt="livres">
                    Se connecter
                    <img class="px-3" src="{{ asset('build/images/favicon.png') }}" alt="livres">
                </a>
            {% endif %}
        </div>
        <div class="col-3 me-5">
            <img class="image-home" src="{{ asset('build/images/sitting.png') }}" alt="femme assise">
        </div>
    </div>
</div>
{% endblock %}