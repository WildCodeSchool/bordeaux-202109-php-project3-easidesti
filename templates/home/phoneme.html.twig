{% extends 'base.html.twig' %}
{% block body %}
<div class="easi">
    <div class="d-flex flex-row justify-content-between p-3">
        <img src="{{ asset('build/images/image_a.png') }}" alt="image lettre a">
        <h2>EASI</h2>
    </div>
    <div class="d-flex flex-column mx-5">
        <h1 class="text-center mx-5"> Explication des différents phonèmes possibles avec la lettre A</h1>
        <div class="mx-auto">
            <div>
                <audio id="audio-phoneme" src="{{ asset('build/images/explication-phoneme.mp3') }}"></audio>
                <img id="phoneme-listen" class="btn w-100" src="{{ asset('build/images/logo-hear.png') }}" alt="logo écouter">
            </div>
        </div>
    </div>
    <div class="btn-app easi-white-propositions container">
        <div class="d-flex justify-content-center flex-wrap py-4">
            <img class="proposition col-3" src="{{ asset('build/images/lettre_a_table.png') }}" alt="son table">
            <img class="proposition col-3" src="{{ asset('build/images/lettre_a_chaussure.png') }}" alt="son chaussure">
            <img class="proposition col-3" src="{{ asset('build/images/lettre_a_maison.png') }}" alt="son maison">
            <img class="proposition col-3" src="{{ asset('build/images/lettre_a_ambulance.png') }}" alt="son ambulance">
            <img class="proposition col-3" src="{{ asset('build/images/lettre_a_faim.png') }}" alt="son faim">
            <img class="proposition col-3" src="{{ asset('build/images/lettre_a_rail.png') }}" alt="son rail">
        </div>
    </div>
    <div class="d-flex justify-content-between mx-5 mt-5 ">
        <a href="{{ path('help') }}"><div class="next btn btn-app bg-secondary p-2 fs-2"><i class="fas fa-arrow-left"></i>Précédent</div></a>
        <a href="{{ path('easi_index',{ word_content: 'haricot' }) }}"><div class="next btn btn-app bg-secondary p-2 fs-2">Suivant<i class="fas fa-arrow-right"></i></div></a>
    </div>
</div>
{% endblock %}