                <img id="phoneme-listen" class="btn w-100" src="{{ asset('build/images/logo-hear.png') }}" alt="logo écouter">
            </div>
        </div>
    </div>

    <div class="btn-app easi-white-propositions container d-flex justify-content-center flex-wrap">
        <div class="d-flex btn-app pt-2 px-1 m-2 flex-column justify-content-end">
                <img class="proposition col-3" src="{{ asset('build/images/lettre_a_1.png') }}" alt="son table">
            <img class="proposition" src="{{ asset('build/images/logo_ecouter.png') }}" alt="">
        </div>
        <div class="d-flex btn-app pt-2 px-1 m-2 flex-column justify-content-end">
                <img class="proposition col-3" src="{{ asset('build/images/lettre_a_2.png') }}" alt="son chaussure">
            <img class="proposition" src="{{ asset('build/images/logo_ecouter.png') }}" alt="">
        </div>
        <div class="d-flex btn-app pt-2 px-1 m-2 flex-column justify-content-end">
                <img class="proposition col-3" src="{{ asset('build/images/lettre_a_3.png') }}" alt="son maison">
            <img class="proposition" src="{{ asset('build/images/logo_ecouter.png') }}" alt="">
        </div>
        <div class="d-flex btn-app pt-2 px-1 m-2 flex-column justify-content-end">
                <img class="proposition col-3" src="{{ asset('build/images/lettre_a_4.png') }}" alt="son ambulance">
            <img class="proposition" src="{{ asset('build/images/logo_ecouter.png') }}" alt="">
        </div>
        <div class="d-flex btn-app pt-2 px-1 m-2 flex-column justify-content-end">
                <img class="proposition col-3" src="{{ asset('build/images/lettre_a_5.png') }}" alt="son faim">
            <img class="proposition" src="{{ asset('build/images/logo_ecouter.png') }}" alt="">
