{% extends 'base.html.twig' %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('phoneme') }}
    {{ encore_entry_script_tags('audioPhoneme') }}
{% endblock %}
{% block body %}
<div class="easi container-fluid">
    <div class="d-flex flex-row justify-content-between p-1">
        <img src="{{ asset('build/images/image_' ~ game.serie.letter.content ~ '.png') }}" alt="image lettre{{ game.serie.letter.content }}" >
        <h2>EASI</h2>
    </div>
    <div class="d-flex flex-column mx-2">
        <h1 class="text-center mx-2"> Explication des différents phonèmes possibles avec la lettre {{ game.serie.letter.content }}</h1>
        <div class="mx-auto">
            <div>
                <audio id="audio-phoneme" src="{{ asset('build/images/explication_' ~ game.serie.letter.content ~ ".mp3") }}"></audio>
                <img id="phoneme-listen" class="btn w-75 text-center p-0 m-0" src="{{ asset('build/images/logo_hear.png') }}" alt="logo écouter">
            </div>
        </div>
    </div>
    <div class="btn-app easi-white-propositions d-flex mx-auto">
        <div class="btn-app easi-white-propositions d-flex">
            {% include 'component/_exempleProposition.html.twig' %}
        </div>
    </div>

    <div class="d-flex justify-content-between mx-5 ">
        <a href="{{ path('help') }}"><div class="next btn btn-app bg-secondary p-2 fs-2"><i class="fas fa-arrow-left"></i>Précédent</div></a>
        <a href="{{ path('game_play', {id: game.id}) }}"><div class="next btn btn-app bg-secondary p-2 fs-2">Suivant<i class="fas fa-arrow-right"></i></div></a>
    </div>
</div>
{% endblock %}