            <img class="proposition" src="{{ asset('build/images/logo_ecouter.png') }}" alt="">
        </div>
    </div>
    <div class="d-flex justify-content-between mx-5 mt-5 ">
        <a href="{{ path('help') }}"><div class="next btn btn-app bg-secondary p-2 fs-2"><i class="fas fa-arrow-left"></i>Précédent</div></a>
        <a href="{{ path('game_init') }}"><div class="next btn btn-app bg-secondary p-2 fs-2">Suivant<i class="fas fa-arrow-right"></i></div></a>
    </div>
</div>
{% endblock %}