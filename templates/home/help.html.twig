{% extends 'base.html.twig' %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('help') }}
{% endblock %}
{% block body %}
<div class="easi container-fluid">
    <div class="d-flex flex-row justify-content-center pt-5 p-3">
        <h2>EASI</h2>
    </div>
    <div class="d-flex flex-column mx-5">
        <h1 class="text-center mx-5"> Explication des différentes aides possibles</h1>
        <div class="mx-auto">
           <div>
               <audio id="audio-help" src="{{ asset('build/images/explication-help.mp3') }}"></audio>
               <img id="help-listen" class="btn w-100" src="{{ asset('build/images/logo_hear.png') }}" alt="logo écouter">
           </div>
        </div>
    </div>
    <div class="d-flex flex-row justify-content-around m-4">
        <div class="easi-white-help p-1">
            <h4 class="d-flex align-items-center justify-content-center text-center"><img class="d-none d-lg-block  w-25" src="{{ asset('build/images/emoji_help.png') }}" alt="emoji aide">Aide n°1</h4>
            <p class="d-flex flex-row mt-4">
                <img class="w-75" src="{{ asset('build/images/aide1_ciseaux.jpg') }}" alt="ciseaux">
                <img class="w-75" src="{{ asset('build/images/aide1_chut.png') }}" alt="chut">
            </p>
        </div>
        <div class="easi-white-help p-1">
            <h4 class=" d-flex align-items-center justify-content-center text-center"><img class="d-none d-lg-block w-25" src="{{ asset('build/images/emoji_help.png') }}" alt="emoji aide">Aide n°2</h4>
            <p class="d-flex flex-row mt-3">
                <img class="w-50" src="{{ asset('build/images/aide2_dessin.jpg') }}" alt="dessin">
                <img class="w-50" src="{{ asset('build/images/aide2_livre.png') }}" alt="livre">
            </p>
        </div>
        <div class="easi-white-help p-1">
            <h4 class="d-flex align-items-center justify-content-center text-center"><img class="d-none d-lg-block  w-25" src="{{ asset('build/images/emoji_help.png') }}" alt="emoji aide">Aide n°3</h4>
            <p class="mt-4 d-flex justify-content-center">
                <img class="w-50" src="{{ asset('build/images/aide3_frequence.png') }}" alt="frequence">
            </p>
        </div>
    </div>
    <div class="d-flex justify-content-end mx-5 mt-5">
        <a href="{{ path('game_init') }}"><div class="next btn btn-app bg-secondary p-2 fs-2">Suivant<i class="fas fa-arrow-right"></i></div></a>
    </div>
</div>
{% endblock %}