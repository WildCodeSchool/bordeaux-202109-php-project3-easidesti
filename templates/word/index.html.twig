{% extends 'base.html.twig' %}

{% block title %}Création d'un nouveau mot{% endblock %}

{% block body %}
<div class="container-fluid easi">
    <h1 class="text-center mt-5">Création d'un nouveau mot</h1>
    <div class="col-4 mx-auto">
        {{ form_start(form) }}
            {{ form_row(form.letters) }}
            {{ form_row(form.content) }}
        <div id="endpoint" class="bg-light rounded-3 w-100 h-50 fs-2 text-dark ps-2"></div>
            {{ form_row(form.definition) }}
            {{ form_row(form.audio) }}
            {{ form_row(form.picture) }}
        <button class="btn-app btn bg-light">Créer le mot</button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
