{% extends 'base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>Série N° {{ serie.number }} Lettre <span class="fw-bolder">{{ serie.letter.content|upper }}</span> - <span>Niveau {% for i in 1..serie.level %} <i class="fas fa-star"></i>{% endfor %}</span></h1>
                <a class="btn btn-primary mb-3" href="{{ path('admin_series') }}">Retour aux séries</a>
                <div class="list-group">
                    {% for word in serie.words %}
                        <a href="{{ path('word_edit', {word: word.id}) }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            {{ word.content }}
                            <div>
                                {% if word.endpoints|length == 0 %}
                                    <span class="badge bg-danger rounded-pill">Syllabes à définir</span>
                                {% else %}
                                    <span class="badge bg-success rounded-pill">Syllabes OK</span>
                                {% endif %}
                                {% if word.definition == 'À définir' %}
                                    <span class="badge bg-danger rounded-pill">Définition à rédiger</span>
                                {% else %}
                                    <span class="badge bg-success rounded-pill">Définition OK</span>
                                {% endif %}
                            </div>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
