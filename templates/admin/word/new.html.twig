{% extends 'admin/base_admin.html.twig' %}
{% block title %}Création d'un nouveau mot{% endblock %}

{% block body %}
{% include 'admin/admin_component/_nav.html.twig' %}
<div class="container-fluid">
    <h1 class="text-center pt-5">Création d'un nouveau mot</h1>
    <div id="form" class="col-10 col-sm-8 col-lg-5 mx-auto pb-5">
        {{ form_start(form) }}
        <div id="block-hidden"></div>
            {{ form_row(form.content) }}
        <div class="btn btn-primary mb-3" id="display-div">Selectionner les syllabes et les lettres muettes</div>
        <div id="div-letter" class="d-none mt-3 border">
            <div>Selectionnez la lettre à travailler</div>
            <div class="d-flex flex-row justify-content-between align-items-center">
                <div id="study-letter" class="rounded-3 fs-2 text-dark ps-2 col-11 "></div>
                <div id="empty-word" class="btn text-danger col-1 text-center fs-2">X</div>
            </div>
        </div><div id="div-syllabe" class="d-none mt-3 border">
            <div class="text-syllabe">Selectionnez la fin de la syllabe</div>
            <div class="d-flex flex-row justify-content-between align-items-center">
                <div id="endpoint" class="rounded-3 fs-2 text-dark ps-2 col-11 "></div>
            </div>
        </div>
        <div id="div-mute-letter" class="d-none mt-3 border">
            <div class="mb-3">Selectionnez la(les) lettre(s) muette(s)</div>
            <div class="d-flex flex-row justify-content-between align-items-center">
                <div id="mute-letter" class="rounded-3 fs-2 text-dark ps-2 col-11"></div>
            </div>
        </div>

            {{ form_row(form.pronunciation) }}
            {{ form_row(form.definition) }}
            {{ form_row(form.imageFile) }}
            {{ form_row(form.level) }}
        <div class="d-flex justify-content-center col-auto">
            <button class="btn-app btn bg-light mx-auto px-5 py-2 fs-4">Créer le mot</button>
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('word_add') }}
    {{ encore_entry_script_tags('definition') }}
{% endblock %}
