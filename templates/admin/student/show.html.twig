{% extends 'admin/base_admin.html.twig' %}

{% block title %}Résultats élève{% endblock %}

{% block body %}
    {% include 'admin/admin_component/_nav.html.twig' %}
    <div class="container">
        <div class="row">
            <div class="col-12 mt-5">
                <h1 class="my-5">Résultat de l'élève {{ student.firstname }} {{ student.lastname }}</h1>
                <h2 class="text-center text-light bg-dark my-3">Test(s) de positionnement</h2>
                    {% for training in student.trainings %}
                <h5 class="my-2 border-1 fs-3"> Test n° {{ loop.index }}</h5>
                    <div class="d-flex flex-row">
                            <div class="col-6">
                                <div class="progress w-75 my-2">
                                    <div class="progress-bar bg-success fw-bold" role="progressbar" style="width:{{ (((training.step - training.errorCount) * 100) / training.step)|round }}%" aria-valuenow="{{ (((training.step - training.errorCount) * 100) / training.step)|round }}" aria-valuemin="0" aria-valuemax="100">{{ (((training.step - training.errorCount) * 100) / training.step)|round }}% de réussite</div>
                                    <div class="progress-bar bg-danger fw-bold" role="progressbar" style="width: {{ ((training.errorCount * 100) / training.step)|round }}%" aria-valuenow="{{ ((training.errorCount * 100) / training.step)|round }}" aria-valuemin="0" aria-valuemax="100">{{ ((training.errorCount * 100) / training.step)|round }}%</div>
                                </div>
                                <div class="progress w-75">
                                    <div class="progress-bar bg-success fw-bold" role="progressbar" style="width:{{ (((training.step - training.errorCount) * 100) / training.step)|round }}%" aria-valuenow="{{ (((training.step - training.errorCount) * 100) / training.step)|round }}" aria-valuemin="0" aria-valuemax="100">{{training.step - training.errorCount}} bonnes réponses / 120</div>
                                    <div class="progress-bar bg-danger fw-bold" role="progressbar" style="width: {{ ((training.errorCount * 100) / training.step)|round }}%" aria-valuenow="{{ ((training.errorCount * 100) / training.step)|round }}" aria-valuemin="0" aria-valuemax="100">{{training.errorCount}}</div>
                                </div>
                            </div>
                            <div class="col-9">
                                 <table class="table border border-warning w-50">
                                      {% for letter, value in training.countLetterErrors %}
                                         <tr>
                                             <th class="border border-warning text-center" scope="col">Lettre <span class="text-warning">{{ letter }}</span></th>
                                              <td> <span class="text-danger fw-bold">{{ value }} </span> faute{{ value > 1 ? 's' : '' }}</td>
                                              <td> <span class="text-danger fw-bold">{{ ((value * 100) / 120)|round }}</span> % de mauvaises réponses</td>
                                         </tr>
                                     {% endfor %}
                                 </table>
                            </div>
                     </div>
                    {% endfor %}
                <h2 class="text-center text-light bg-dark my-3">Partie EASI</h2>
                <ul class="list-group">
                    {% for game in student.games %}
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Pour la série n° <span class="fw-bold text-info">{{ game.serie.number }} </span>de la lettre <span class="fw-bold text-warning">{{ game.serie.letter.content }}</span></span></span>
                            <span>Score de <span class="text-success fw-bold">{{ game.score }}</span> sur {{ game.objectifPoint }}</span>
                            <span>{{ game.errorCount }} erreur{{ game.errorCount > 1 ? 's' : '' }}</span>
                            <span>{{ game.helpCount == 0 ? 'Aucun ' : game.helpCount }} recours aux aides</span>
                            <span> effectuée le {{ game.dateGame }}</span>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

{% endblock %}
