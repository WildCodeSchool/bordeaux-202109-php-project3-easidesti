{% extends 'admin/base_admin.html.twig' %}

{% block title %}Résultats élève{% endblock %}

{% block body %}
    {% include 'admin/admin_component/_nav.html.twig' %}
    <div class="container">
        <div class="row">
            <div class="col-12 mt-5">
                <h1>Résultat de l'élève {{ student.firstname }} {{ student.lastname }}</h1>
                <div class="list-group">
                {% for game in student.games %}
                    <table>
                    <p>L'élève suit actuellement la partie {{ game.isEasi ? 'EASI' : 'DESTI' }}</p>
                    <p>Pour la série n° <span>{{ game.serie.number }} de la lettre {{ game.serie.letter.content }}</span>
                    </p>
                    <p>Score de {{ game.score }} sur {{ game.objectifPoint }}</p>
                    <p>L'élève suit actuellement la partie {{ game.isEasi ? 'EASI' : 'DESTI' }}</p>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
