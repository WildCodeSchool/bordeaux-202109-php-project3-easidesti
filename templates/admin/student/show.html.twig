{% extends 'admin/base_admin.html.twig' %}

{% block title %}Résultats élève{% endblock %}

{% block body %}
    {% include 'admin/admin_component/_nav.html.twig' %}
    <div class="container">
        <div class="row">
            <div class="col-12 mt-5">
                <h1 class="my-5">Résultat de l'élève {{ student.firstname }} {{ student.lastname }}</h1>
                <h2 class="my-3">Résultat du test de positionnement</h2>
                <h4 class="my-3">Résultat sur l'ensemble du test</h4>
                <ul class="list-group"
                    {% for training in student.trainings %}
                        <li class="list-group-item d-flex justify-content-between">
                            <h5> Test n° {{ loop.index }}</h5>
                            <span>Nombre de mauvaises réponses : <span class="text-danger"> {{ training.errorCount }}</span> / 120</span>
                            <span>Nombre de bonnes réponses : <span class="text-success"> {{ training.step - training.errorCount }}</span> / 120</span>
                            <span class="mt-3">Pourcentage de mauvaises réponses : <span class="text-danger">{{ ((training.errorCount * 100) / training.step)|round }} </span> % </span>
                            <span>Pourcentage de bonnes réponses: <span class="text-success">{{ (((training.step - training.errorCount) * 100) / training.step)|round }} </span> % </span>
                        </li>
                    {% endfor %}
                <h4 class="my-3"> Résultat sur chacune des lettres </h4>

                </ul>

                <h2 class="my-3">Résultat sur la partie EASI</h2>
                <ul class="list-group">
                    {% for game in student.games %}
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Pour la série n° <span>{{ game.serie.number }} de la lettre {{ game.serie.letter.content }}</span></span>
                            <span>Score de {{ game.score }} sur {{ game.objectifPoint }}</span>
                            <span> Fait le {{ game.dateGame }}</span>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

{% endblock %}
