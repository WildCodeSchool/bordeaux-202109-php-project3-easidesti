{% extends 'admin/base_admin.html.twig' %}

{% block title %}Elèves{% endblock %}

{% block body %}
    {% include 'admin/admin_component/_nav.html.twig' %}
    <div class="container">
        <div class="row">
            <div class="col-12 mt-5">
                <h1 class="mb-4">Liste des élèves </h1>
                <ul class="list-group w-50">
                    {% for student in students %}
                        <li class="list-group-item d-flex justify-content-between">
                            <span>{{ student.firstname }} {{ student.lastname }} - {{ student.nickname }} - {{ student.schoolLevel.name }}</span>
                            <span><a class="btn" href="{{ path('admin_student_result_show', {'nickname': student.nickname}) }}">Ses résultats</a></span>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
    </div>
{% endblock %}