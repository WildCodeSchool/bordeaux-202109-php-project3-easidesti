{% extends 'admin/base_admin.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% include 'admin/admin_component/_nav.html.twig' %}

    <div class="container-fluid">
        <div class="d-flex flex-column justify-content-center" >
                <h1 class="m-5 text-center">Séléctionner l'enfant à modifier</h1>
        </div>
        <div class="row d-flex">
            <div class="form col-11 col-sm-9 col-md-7 col-lg-5 mx-auto justify-content-center p-3 border border-2 border-primary shadow-lg p-3 mb-5 rounded text-center">
                <ul>
                    {% for student in students %}
                        <li class="list-unstyled d-flex justify-content-between border-bottom mb-3">
                            <div>
                                {{ student.firstname }} {{ student.lastname }}
                            </div>
                            <div>
                                <a href="{{ path('admin_registration_edit_student', {id: student.id}) }}" class="me-3"><i class="fa-solid fa-pen"></i></a>
                                <a href="{{ path('admin_registration_delete_student', {id: student.id}) }}" class="me-3"><i class="fa-solid fa-trash-can"></i></a>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

{% endblock %}