{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% include 'admin/admin_component/_nav.html.twig' %}

    <div class="container-fluid">
        <div class="d-flex flex-column justify-content-center" >
            <a class="text-decoration-none" href="{{ path('home') }}">
            <h1 class="m-3 text-center">Bonjour {% if app.user %}{{ app.user.nickname }}{% endif %}</h1>
            </a>
            <h2 class="mb-5 text-center">Formulaire d'inscription d'élève</h2>
        </div>

        <div class="row d-flex">
            <div class="form col-11 col-sm-9 col-md-7 col-lg-5 mx-auto justify-content-center p-3 border border-2 border-primary shadow-lg p-3 mb-5 rounded">
                {{ form_start(registrationForm) }}
                <div class="row">
                        {{ form_row(registrationForm.firstname) }}
                </div>
                <div class="row">
                        {{ form_row(registrationForm.lastname) }}
                </div>
                <div class="row">
                        {{ form_row(registrationForm.schoolLevel) }}
                </div>
                <div class="row">
                        {{ form_row(registrationForm.nickname) }}
                </div>
                <div class="row">
                        {{ form_row(registrationForm.plainPassword) }}
                </div>
                <button type="submit" class="btn bg-secondary border border-primary btn-lg offset-5">Valider</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}