{% extends 'admin/base_admin.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="d-flex flex-column justify-content-center" >
                <h1 class="m-5 text-center">Séléctionner la classe concerné</h1>
        </div>
        <div class="row d-flex">
            <div class="form col-11 col-sm-9 col-md-7 col-lg-5 mx-auto justify-content-center p-3 border border-2 border-primary shadow-lg p-3 mb-5 rounded text-center">
                <ul>
                    {% for schoolLevel in schoolLevels %}
                        <li class="list-unstyled d-flex justify-content-between mb-3 border-bottom">
                            <div>
                                {{ schoolLevel.school.name }} {{ schoolLevel.name }}
                            </div>
                            <div>
                                <a href="{{ path('admin_school_level_edit', {id: schoolLevel.id}) }}" class="text-decoration-none m-2"><i class="fa-solid fa-pen"></i></a>
                                <a href="{{ path('admin_school_level_delete', {id: schoolLevel.id}) }}" class="text-decoration-none m-2" onclick="return confirm('Êtes-vous sur de vouloir supprimer cette classe avec tous les élèves de celle-ci ?')"><i class="fa-solid fa-trash-can"></i></a>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

{% endblock %}