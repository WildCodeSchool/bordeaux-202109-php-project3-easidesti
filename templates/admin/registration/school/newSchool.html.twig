{% extends 'admin/base_admin.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="d-flex flex-column justify-content-center" >
            <h1 class="my-5 text-center">Formulaire de création d'un établissement</h1>
        </div>
        <div class="row d-flex">
            <div class="form col-11 col-sm-9 col-md-7 col-lg-5 mx-auto justify-content-center p-3 border border-2 border-primary shadow-lg p-3 mb-5 rounded text-center">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn bg-secondary border border-primary btn-lg">Valider</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}